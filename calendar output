#include <stdio.h>

int yun(year)//윤년인지 계산
{
	if (year % 4 == 0)
	{
		if (year % 100 == 0)
		{
			if (year % 400 == 0)
			{
				return 1;
			}
			else
			{
				return 0;
			}
		}
		else
		{
			return 1;
		}
	}
	else
	{
		return 0;
	}

}

int DAY(month, year)//1년 1월 부터 입력한 년, 월의 전 달까지의 날짜 계산 및 입력한 월의 날짜가 몇 일인지 계산(28일, 29일, 30일, 31일)
{	//B는 입력한 월이 몇 일(28일, 29일, 30일, 31일)까지 있는지 받는 변수
	int day = 0, B;
	if (month == 1 || month == 3 || month == 5 || month == 7 || month == 8 || month == 10 || month == 12)
	{
		day += 31;
	}
	else if (month == 0)
	{
		day += 0;
	}
	else
	{
		if (month == 2)
		{
			B = yun(year);
			if (B == 1)
			{
				day += 29;
			}
			else
			{
				day += 28;
			}
		}
		else
		{
			day += 30;
		}
	}
	return day;
}

int main(void)
{
	//B는 입력한 월이 몇 일(28일, 29일, 30일, 31일)까지 있는지 받는 변수
	//b는 윤년인지 확인하는 변수
	int year = 1, month, b, d, B;
	while (year != 0)
	{
		int day = 0;
		printf("> 년, 월을 입력하세요 (종료는 0) : ");
		scanf_s("%d", &year);
		getchar();
		if (year == 0)
		{
			break;
		}
		scanf_s("%d", &month);
		getchar();
		
		for (int i = 1; i < year; i++)
		{
			b = yun(i);
			if (b == 1)
			{
				day += 366;
			}
			else
			{
				day += 365;
			}
		}
		for (int i = 1; i < month; i++)
		{
			d = DAY(i, year);
			day += d;
		}
		day += 1;

		printf("              %d년 %d월        \n", year, month);
		printf("            =============\n");
		printf("------------------------------------\n");
		printf(" SUN  MUN  TUE  WED  THU  FRI  SAT \n");
		printf("------------------------------------\n");
		if (day % 7 == 0)
		{
			B = DAY(month, year);
			for (int i = 1; i <= B; i++)
			{
				printf("%3d  ", i);
				if (i % 7 == 0)
				{
					printf("\n");
				}
			}
		}
		else if (day % 7 == 1)
		{
			printf("     ");
			B = DAY(month, year);
			for (int i = 1; i <= B; i++)
			{
				printf("%3d  ", i);
				if (i % 7 == 6)
				{
					printf("\n");
				}
			}
		}
		else if (day % 7 == 2)
		{
			printf("          ");
			B = DAY(month, year);
			for (int i = 1; i <= B; i++)
			{
				printf("%3d  ", i);
				if (i % 7 == 5)
				{
					printf("\n");
				}
			}
		}
		else if (day % 7 == 3)
		{
			printf("               ");
			B = DAY(month, year);
			for (int i = 1; i <= B; i++)
			{
				printf("%3d  ", i);
				if (i % 7 == 4)
				{
					printf("\n");
				}
			}
		}
		else if (day % 7 == 4)
		{
			printf("                    ");
			B = DAY(month, year);
			for (int i = 1; i <= B; i++)
			{
				printf("%3d  ", i);
				if (i % 7 == 3)
				{
					printf("\n");
				}
			}
		}
		else if (day % 7 == 5)
		{
			printf("                         ");
			B = DAY(month, year);
			for (int i = 1; i <= B; i++)
			{
				printf("%3d  ", i);
				if (i % 7 == 2)
				{
					printf("\n");
				}
			}
		}
		else
		{
			printf("                              ");
			B = DAY(month, year);
			for (int i = 1; i <= B; i++)
			{
				printf("%3d  ", i);
				if (i % 7 == 1)
				{
					printf("\n");
				}
			}
		}
		printf("\n");
	}


	return 0;
}
